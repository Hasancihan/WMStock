@model IEnumerable<WMStock.Models.Inventory>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>ENVANTER</h2>

<p>
    @Html.ActionLink("Yeni Envanter", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @*@Html.DisplayNameFor(model => model.InventoryName)*@
            Kayıt Adı
        </th>
        <th>
            @*@Html.DisplayNameFor(model => model.Personal.Name)*@
            Personel
        </th>
        <th>
            @*@Html.DisplayNameFor(model => model.Category.CategoryName)*@
            Kategori
        </th>
        <th>
            @*@Html.DisplayNameFor(model => model.Brand.BrandName)*@
            Marka
        </th>
        <th>
            @*@Html.DisplayNameFor(model => model.Modal.ModalName)*@
            Model
        </th>
        <th>
            @*@Html.DisplayNameFor(model => model.Category.CategoryName)*@
            Lokasyon
        </th>
        <th>
            @*@Html.DisplayNameFor(model => model.DateTime)*@
            Tarih
        </th>

        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.InventoryName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Personal.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Category.CategoryName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Brand.BrandName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Modal.ModalName)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.Location.LocationName)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.DateTime)
            </td>
            <td>
                @Html.ActionLink("Düzenle", "Edit", new { id = item.InventoryID }) |
                @Html.ActionLink("Detaylar", "Details", new { id = item.InventoryID }) |
                @Html.ActionLink("Sil", "Delete", new { id = item.InventoryID })
            </td>
        </tr>
    }

</table>
