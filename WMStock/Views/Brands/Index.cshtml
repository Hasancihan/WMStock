@model IEnumerable<WMStock.Models.Brand>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>MARKA</h2>

<p>
    @Html.ActionLink("Yeni Marka", "Create")
</p>
@using (Html.BeginForm("Search", "Brands", FormMethod.Get))
{
    @Html.TextBox("s")<input type="submit" value="Ara" />
}
<br />
<table class="table">
    <tr>
        <th>
            @*@Html.DisplayNameFor(model => model.BrandName)*@
            Marka

        </th>
        <th>
            @*@Html.DisplayNameFor(model => model.Category.CategoryName)*@
            Kategori
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.BrandName)


            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Category.CategoryName)

            </td>
            <td>
                @Html.ActionLink("Düzenle", "Edit", new { id = item.BrandID }) |
                @Html.ActionLink("Detaylar", "Details", new { id = item.BrandID }) |
                @Html.ActionLink("Sil", "Delete", new { id = item.BrandID })
            </td>
        </tr>
    }

</table>
