@model IEnumerable<WMStock.Models.Brand>
@{
    ViewBag.Title = "Search";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>MARKA</h2>

<p>
    @Html.ActionLink("Yeni Marka", "Create")
</p>
@using (Html.BeginForm("Search", "Brands", FormMethod.Get))
{
    @Html.TextBox("s")<input type="submit" value="Ara" />
}
<br />
<table class="table">
    <tr>
        <th>
            @*@Html.DisplayNameFor(model => model.BrandName)*@
            Marka

        </th>
        <th>
            @*@Html.DisplayNameFor(model => model.Category.CategoryName)*@
            Kategori
        </th>
        <th></th>
    </tr>
    @if (Model.Count() == 0)
    {
        <tr>
            <td colspan="3" style="color:red">No Match</td>
        </tr>
    }
    else
    {

        foreach (var item in Model)
        {
            <tr>
                <td>
                    @item.BrandName
                   
                </td>
                <td>
                    @item.Category.CategoryName
                </td>

                <td>
                    @Html.ActionLink("Düzenle", "Edit", new { id = item.BrandID }) |
                    @Html.ActionLink("Detaylar", "Details", new { id = item.BrandID }) |
                    @Html.ActionLink("Sil", "Delete", new { id = item.BrandID })
                </td>
            </tr>
        }
    }

</table>
<p>

    @Html.ActionLink("Listeye Geri Dön", "Index")
</p>
