@model IEnumerable<WMStock.Models.Category>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>KATEGORİ</h2>

<p>
    @Html.ActionLink("Yeni Katagori", "Create")
</p>
@using (Html.BeginForm("Search", "Categories", FormMethod.Get))
{
    @Html.TextBox("s")<input type="submit" value="Ara" />
}
                      <br />
<table class="table">
    <tr>
        <th>
            @*@Html.DisplayNameFor(model => model.CategoryName)*@
            Katagori
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CategoryName)
            </td>
            <td>
                @Html.ActionLink("Düzenle", "Edit", new { id = item.CategoryID }) |
                @Html.ActionLink("Detaylar", "Details", new { id = item.CategoryID }) |
                @Html.ActionLink("Sil", "Delete", new { id = item.CategoryID })
            </td>
        </tr>
    }

</table>
